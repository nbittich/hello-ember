{{page-title "Tâches"}}
<h1>Tâches</h1>
<table class="table table-bordered m-2">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Détail</th>
    </tr>
  </thead>
  <tbody>
    {{#each @model as |task|}}
      <tr>
        <td>{{task.name}}</td>
        <td><LinkTo @route="tasks.detail" @model={{task}}>Detail</LinkTo></td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}